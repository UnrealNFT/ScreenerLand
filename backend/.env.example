# Backend Environment Variables - EXAMPLE
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/screenerfun
DATABASE_PASSWORD=YOUR_DB_PASSWORD

# Production (Hetzner) - Update when deploying
# DATABASE_URL=postgresql://username:password@your-server.com:5432/screenerfun

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS (frontend URL)
FRONTEND_URL=http://localhost:5173

# Admin Security
ADMIN_PASSWORD=your_secure_admin_password

# CSPR.cloud API Keys (Get from https://developers.cspr.cloud/)
# You can use the same key for all, or different keys for load distribution
CSPR_CLOUD_KEY_WALLET=your_api_key_here
CSPR_CLOUD_KEY_GENERAL=your_api_key_here
CSPR_CLOUD_KEY_OWNER=your_api_key_here
CSPR_CLOUD_KEY_FALLBACK=your_api_key_here
CSPR_CLOUD_KEY_LEGACY=your_api_key_here

# CTO (Chief Token Officer) System Configuration
# Your wallet that will receive the 10 CSPR payments for CTO access
CTO_RECEIVER_WALLET=your_casper_public_key
CTO_RECEIVER_ACCOUNT_HASH=your_account_hash
